<h1>Editando: {{livro.titulo}}</h1>
<form action="/livros/atualizar" method="post" class="form">
    <input type="hidden" value="{{livro.id}}" name="id">
    <div class="form-control">
        <label for="titulo">TÃ­tulo:</label>
        <input type="text" name="titulo" value="{{livro.titulo}}" >
    </div>
    <div class="form-control">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" value="{{livro.autor}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if livro.capa_dura}}
        <input type="checkbox" name="capa_dura" checked>
        {{else}}
        <input type="checkbox" name="capa_dura">
        {{/if}}
        <label for="capa_dura">Capa dura?</label>
    </div>
    <div class="form-control">
        <input type="submit" value="Atualizar">
    </div>
</form>