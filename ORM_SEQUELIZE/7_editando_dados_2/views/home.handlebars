<h1>Usu√°rios Cadastrados</h1>
<div class="container">
    {{#each users}}
    <div class="item">
        <p>{{this.name}}</p>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>
            <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
            <form action="/users/delete/{{this.id}}" method="post"></form>
            <input type="submit" value="Excluir" class="delete-btn">
        </div>
    </div>
    {{/each}}
</div>